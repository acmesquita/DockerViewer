<p id="notice"><%= notice %></p>

<h1>Containers</h1>

<table>
  <thead>
    <tr>
      <th>Container</th>
      <th>Image</th>
      <th>Command</th>
      <th>Create</th>
      <th>Status</th>
      <th>Ports</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr>
        <td><%= container.container_id %></td>
        <td><%= container.image %></td>
        <td><%= container.command %></td>
        <td><%= container.created %></td>
        <td><%= container.status %></td>
        <td><%= container.ports %></td>
        <td><%= container.names %></td>
        <td><%= link_to 'Show Logs', container %></td>
        <td><%= link_to 'Restart', edit_container_path(container) %></td>
        <td><%= link_to 'Stop', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

