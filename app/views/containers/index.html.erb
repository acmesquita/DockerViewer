<p id="notice"><%= notice %></p>

<h1>Containers</h1>
<%= link_to 'New Container', new_container_path %>

<div class="row">
<% @containers.each do |container| %>

  <div class="col-sm ">
    <div>
      <img src="<%= image_path('docker-container.png') %>" height="128" width="128"  />
      <p> <strong><%= link_to container.names, container%></strong> - <%= container.container_id %></p>
      <!-- <p><%= container.image %></p> -->
      <!-- <p><%= container.created %></p> -->
      <p><%= container.status %></p>
      <!-- <p><%= container.ports %></p> -->
      <p>
      <%= link_to 'Restart', edit_container_path(container), class:"btn btn-success btn-sm" %>
      <%= link_to 'Stop', container, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></p>

      <p></p>
    </div>
  </div>
  
  <% end %>
</div>
  
